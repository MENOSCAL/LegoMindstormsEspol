<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Guia  de uso LEGO Mindstrom EV3"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introducción"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView3"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bienvenido"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/tvBienvenido"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tecnologia EV3"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bloque EV3"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/textView6"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Motores del bloque"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/textView7"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sensores del bloque"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/textView8"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Conexión de la Tecnología EV3"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/textView9"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Interfaz del bloque EV3"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:id="@+id/textView10"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Software de EV3"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView11"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Solución de problemas"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView12"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Información Útil"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView13"
        android:layout_weight="0.04" />
</LinearLayout>